<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<RootNamespace>TurisSharp</RootNamespace>
		<Version>0.0.14</Version>
	</PropertyGroup>
	<PropertyGroup>
		<Description>TurisSharp is a C# and .NET library that helps developers easily manage Turis stores.</Description>
		<Authors>Nasir Rasool</Authors>
		<Copyright>Prime Penguin</Copyright>
		<PackageLicenseUrl>https://raw.githubusercontent.com/PrimePenguin/TurisSharp/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/PrimePenguin/TurisSharp</PackageProjectUrl>
		<RepositoryUrl>https://github.com/PrimePenguin/TurisSharp</RepositoryUrl>
		<PackageTags>Turis,ecommerce</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageIconUrl>https://raw.githubusercontent.com/PrimePenguin/TurisSharp/master/PrimePenguin.png</PackageIconUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Abp" Version="5.12.0" />
		<PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
	</ItemGroup>

</Project>